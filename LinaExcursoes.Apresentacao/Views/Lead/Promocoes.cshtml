@model LinExcursoes.Apresentacao.Models.PromocoesViewModel

@{
    Layout = "~/Views/Shared/Lead_Layout.cshtml";
}
@section Head{
    <meta property="fb:app_id" content="278266912518749" >
    <meta property="og:site_name" content="Lina Excursões" >
    <meta property="og:title" content="Excursão para @Model.ViagemPrincipal.Local" >
    <meta property="og:type" content="article" >
    <meta property="og:url" content="http://linaexcursoes.com.br/Promocoes/@Model.ViagemPrincipal.Id" >
    <meta property="og:image" content="@Model.ViagemPrincipal.ImagemURL" >
    <meta property="og:locale" content="pt_BR" >
    <meta property="og:description" content="À partir de @Model.ViagemPrincipal.Valor" >
}

<div class="container" style="margin-top: 100px;">

    <!-- Jumbotron Header -->
    <header class="jumbotron hero-spacer jumbotron-detalhe-lead">
        @Html.Partial("_LeadDetalhe", Model.ViagemPrincipal)
    </header>

    <hr />

    <!-- Title -->
    <div class="row">
        <div class="col-lg-12">
            <h3>Próximas excursões para @Model.ViagemPrincipal.Tipo</h3>
        </div>
    </div>
    <!-- /.row -->
    <!-- Page Features -->
    <div class="row text-center">

        @Html.Partial("_CardDestino", Model.ListaViagem)

    </div>
    <!-- /.row -->

    <hr />

    <!-- Title -->
    <div class="row">
        <div class="col-lg-12">
            <h3>Próximos destinos</h3>
        </div>
    </div>
    <!-- /.row -->
    <!-- Page Features -->
    <div class="row text-center">

        @Html.Partial("_CardDestino", Model.ListaCadatipo)

    </div>
    <!-- /.row -->

    <hr />

    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12 text-center text-black">
                <p><strong>Divulgado por Lina Excursões</strong></p>
            </div>
        </div>
    </footer>

</div>