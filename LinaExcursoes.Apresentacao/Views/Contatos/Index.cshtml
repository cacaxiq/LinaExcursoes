@model WebSite_LinaExcursao.Models.ContatoViewModel

@{
    Layout = null;
}

<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Fale conosco</h2>
                <hr class="star-primary">
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                @using(Ajax.BeginForm("Create", "Contatos", new AjaxOptions
                {
                    InsertionMode = InsertionMode.Replace,
                    UpdateTargetId = "target",
                    HttpMethod = "POST",
                }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            @Html.LabelFor(model => model.Nome)
                            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", placeholder = "Nome", data_validation_required_message = "Por favor insira seu nome." } })
                            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "help-block text-danger" })
                        </div>
                    </div>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            @Html.LabelFor(model => model.Email)
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "E-mail", data_validation_required_message = "Por favor insira seu email." } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "help-block text-danger" })
                        </div>
                    </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                @Html.LabelFor(model => model.Telefone)
                                @Html.EditorFor(model => model.Telefone, new { htmlAttributes = new { @class = "form-control", placeholder = "Telefone", data_validation_required_message = "Por favor insira seu telefone." } })
                                @Html.ValidationMessageFor(model => model.Telefone, "", new { @class = "help-block text-danger" })
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                @Html.LabelFor(model => model.Messagem)
                                @Html.EditorFor(model => model.Messagem, new { htmlAttributes = new { @class = "form-control", placeholder = "Mensagem", data_validation_required_message = "Insira sua mensagem." } })
                                @Html.ValidationMessageFor(model => model.Messagem, "", new { @class = "help-block text-danger" })
                            </div>
                        </div>
                        <br>
                        <div id="target"></div>
                        <div class="row">
                            <div class="form-group col-xs-12">
                                <button type="submit" class="btn btn-success btn-lg">Enviar</button>
                            </div>
                        </div>
                }
            </div>
        </div>
    </div>
</section>