@model IEnumerable<LinaExcursoes.Dominio.Tables.Viagens>

<div class="container" style="margin-top:60px;">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div style="text-align: center;">
                <h2>Resultado da pesquisa para <span class="label label-default">@ViewBag.Termo</span></h2>
                <hr class="star-primary">
            </div>
            @if (Model.Any())
            {
                <div class="row-stripped">
                    @Html.Partial("_ListaDestinos", Model)
                </div>
            }
            else
            {
                <div class="row-stripped" style="padding-bottom:20px;">
                    <h3>Nenhum destino para a busca <span class="label label-default">@ViewBag.Termo</span></h3>
                    @Html.ActionLink("Voltar", "Index", "Home", null, new { @class = "btn btn-lg btn-default" })
                </div>
            }

        </div>
    </div>
</div>
